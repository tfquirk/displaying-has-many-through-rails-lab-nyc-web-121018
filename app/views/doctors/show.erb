<h1> <%= @doctor.name %> </h1>

<h3> Department: <%= @doctor.department %> </h3>
<h3> Appointment(s): </h3>
<p>------------------------------------------------</p>
  <% @appointments.each_with_index do |appt, i| %>
    <p>Appointment <%= i + 1 %></p>
    <p><%= appt.appointment_datetime.strftime("%B %d, %Y at %H:%M") %></p>
    <p><%= link_to appt.patient.name, patient_path(appt.patient) %></p>
    <p>------------------------------------------------</p>
  <% end %>
