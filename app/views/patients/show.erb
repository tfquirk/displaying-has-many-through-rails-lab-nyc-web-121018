<h1> <%= @patient.name %> </h1>

<h3> Appointment(s): </h3>
<p>------------------------------------------------</p>
  <% @appointments.each_with_index do |appt, i| %>
    <p>Appointment <%= i + 1 %></p>
    <p><%= appt.appointment_datetime.strftime("%B %d, %Y at %H:%M") %></p>
    <p><%= link_to appt.doctor.name, doctor_path(appt.doctor) %></p>
    <p>------------------------------------------------</p>
  <% end %>
